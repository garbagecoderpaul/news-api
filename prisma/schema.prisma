generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}
model News {
  id         String      @id @default(uuid()) @map("id")
  title      String
  hat        String
  text       String
  author     User        @relation(fields: [authorId], references: [id])
  authorId   String
  image      String
  link       String
  isActive   Boolean
  created_at DateTime    @default(now()) @map("created_at")
  updated_at DateTime    @updatedAt @map("updated_at")
  categories  Category[]
}

model Category {
  id         String      @id @default(uuid()) @map("id")
  name       String
  isActive   Boolean
  created_at DateTime    @default(now()) @map("created_at")
  updated_at DateTime    @updatedAt @map("updated_at")
  news       News[]
}

model User {
  id        String     @id @default(uuid()) @map("id")
  username  String
  email     String     @unique
  password  String
  news      News[]     
}
